<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Prompt</th>
      <th>Answer</th>
      <th>Interview</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.prompt %></td>
        <td><%= question.answer %></td>
        <td><%= question.interview.position %></td>
        <td><%= question.interview.company %></td>
        <td><%= link_to 'Show Interview', [@interview] %></td>
        <td><%= link_to 'Edit Question', edit_interview_question_path(@interview, question) %></td>
        <td><%= link_to 'Destroy Question', [@interview, question], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_interview_question_path(@interview) %>
