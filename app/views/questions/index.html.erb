<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Prompt</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |q| %>
        <tr>
          <td><%= q.prompt %></td>
          <td><%= q.answer %></td>
          <td><%= link_to 'Show', question_path(q) %></td>
          <td><%= link_to 'Edit', edit_question_path(q) %></td>
          <td><%= link_to 'Destroy', question_path(q), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

