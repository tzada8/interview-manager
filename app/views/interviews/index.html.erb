<p id="notice"><%= notice %></p>

<h1>Interviews</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Position</th>
      <th>Industry</th>
      <th>Date</th>
      <th>Duration</th>
      <th>Interviewer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.interviews.each do |interview| %>
        <tr>
          <td><%= interview.company %></td>
          <td><%= interview.position %></td>
          <td><%= interview.industry %></td>
          <td><%= interview.date %></td>
          <td><%= interview.duration %> min</td>
          <td><%= interview.interviewer %></td>
          <td><%= link_to 'Show', interview %></td>
          <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
          <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

