<p id="notice"><%= notice %></p>

<h1>Generics</h1>

<%= render 'shared/search', path: generics_path %>

<table>
  <thead>
    <tr>
      <th>Prompt</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <% question.generics.each do |generic| %>
        <tr>
          <% q = generic.question %>
          <td><%= q.prompt %></td>
          <td><%= q.answer %></td>
          <td><%= link_to 'Show', generic %></td>
          <td><%= link_to 'Edit', edit_generic_path(generic) %></td>
          <td><%= link_to 'Destroy', generic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Generic', new_generic_path %> |
